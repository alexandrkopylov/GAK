<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
	<!--List elevators point for tap!-->
	<record model="ir.ui.view" id="uis_papl_tap_elevation_list">
		<field name="name">Tap Elevation List</field>
		<field name="model">uis.papl.tap.elevation</field>
		<field name="arch" type="xml">
			<tree string="List of Tap Elevation">
				<field name="id"/>
				<field name="tap_id"/>
				<field name="dist"/>
				<field name="latitude"/>
				<field name="longitude"/>
				<field name="elevation"/>
				<field name="resolution"/>
			</tree>
		</field>
	</record>
		<!-- Form view for Tap!-->
		<record model="ir.ui.view" id="uis_papl_tap_form">
			<field name="name">Tap form view</field>
			<field name="model">uis.papl.tap</field>
			<field name="arch" type="xml">
				<form string="Tap form">
					<sheet string="Details">
						<h1>
							<field name="name"/>
						</h1>
						<h2>
							<field name="apl_id"/>
						</h2>
						<group>
							<group>
								<field name="pillar_cnt"/>
								<field name="line_len_calc"/>
							</group>
							<group>
								
							</group>
						</group>
						<notebook>
							<page string="Main">
								<group>
									<field name="is_main_line"/>
								</group>
							</page>
							<page string="Profile">
								<field name="profile_image" widget="image" class="imagescheme2" options='{"size":[800,400]}'/>
								<field name="profile_3d_image" widget="image" class="imagescheme2" options='{"size":[800,800]}'/>
							</page>
							<page string="Pillars">
								<field name="pillar_ids"/>
							</page>
							<page string="System details">
								<group>
									<field name="conn_pillar_id"/>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<!-- Kanban view for Tap !-->
		<record id="uis_papl_tap_kanban" model="ir.ui.view">
		<field name="name">Tap Kanban view</field>
		<field name="model">uis.papl.tap</field>
		<field name="arch" type="xml">
			<kanban>
				<field name="name"/>
				<templates>
					<t t-name="kanban-box" create="false"><!--default_group_by="field"!-->
						<div class="oe_kanban_vignette oe_semantic_html_override" style="padding:0px;">
							<!--<a type="open">!-->
								<!--<img style="max-width:100%;" t-att-src="kanban_image('uis.ap.photo','image_400',record.id.value)" class="oe_kanban_image"/>!-->
								<img style="max-width:100%;"  t-att-src="kanban_image('uis.papl.tap','profile_3d_image',record.id.value)" class="oe_kanban_image"/>
							<!--</a>!-->
							<div class="oe_right oe_button_box" style="width: 200px;position: absolute;bottom: 10px;" name="buttons_kanban_view">
									<button class="oe_inline" name="act_rx_plus" type="object">v</button>
									<button class="oe_inline" name="act_rx_minus" type="object">^</button>
									<button class="oe_inline" name="act_ry_plus" type="object">&lt;</button>
									<button class="oe_inline" name="act_ry_minus" type="object">&gt;</button>
							</div>
							<div class="oe_kanban_details" style="position: absolute;top: 10px;left: 0px;padding-left: 10px;background: rgba(182, 187, 255, 0.44);">
								<h4>
									<a type="open">
										<field name="name"/>
									</a>
								</h4>
								<div name="tags">
								<ul>
									<li>APL:<field name="apl_id"/></li>
									<li>Pillar count:<field name="pillar_cnt"/></li>
									<li>Tap lenght:<field name="line_len_calc"/></li>
									<li>Tap No:<field name="num_by_vl"/></li>
								</ul>
								</div>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	<!-- Tree view for Tap!-->
	<record model="ir.ui.view" id="uis_papl_tap_list">
		<field name="name">Tap List</field>
		<field name="model">uis.papl.tap</field>
		<field name="arch" type="xml">
			<tree string="List of Tap" editable="top" create="false" edit="false" fonts="bold:is_main_line==True" colors="blue:is_main_line==True">
				<field name="id"/>
				<field name="name"/>
				<field name="apl_id"/>
				<field name="pillar_cnt"/>
				<field name="is_main_line" invisible="1"/>
				<!--<field name="cnt_np"/>
				<field name="pillar_ids" readonly="1" widget="one2many"/>!-->
				<button name="act_normalize_num" string="Normalize" type="object" icon="STOCK_REFRESH"/>
				<!--<button name="get_elevation" string="Elevation" type="object" icon="STOCK_EXECUTE"/>!-->
				<!--<button name="do_pillar_apl_id_by_tap" string="Pil apl id by tap id" type="object" icon="STOCK_REFRESH"/>!-->
			</tree>
		</field>
	</record>
	
	<!--Window action for tap!-->
	<record id="uis_papl_tap_act_window" model="ir.actions.act_window">
	  <field name="name">List of Tap</field>
	  <field name="res_model">uis.papl.tap</field>
	  <field name="view_type">form</field>
	  <field name="view_mode">tree,form,kanban</field>
	  <field name="help" type="html">
		<p class="oe_view_nocontent_create">Create new Tap</p>
	  </field>
	</record>
	
	<!--
	<record id="uis_papl_tap_elevation_action_window" model="ir.actions.act_window">
	  <field name="name">List Elevation</field>
	  <field name="res_model">uis.papl.tap.elevation</field>
	  <field name="view_type">form</field>
	  <field name="view_mode">tree,form</field>
	  <field name="help" type="html">
		<p class="oe_view_nocontent_create">Create new Tap elevation</p>
	  </field>
	</record>
	
	
	<menuitem name="Tap elevation points" id="uis_papl_menu_tap_elevation_list" parent="uis_papl_menu_apl"
              action="uis_papl_tap_elevation_action_window"/>!-->
	
	<menuitem name="List of Tap" id="uis_papl_menu_tap_list" parent="uis_papl_menu_apl"
              action="uis_papl_tap_act_window"/>
  </data>
</openerp>