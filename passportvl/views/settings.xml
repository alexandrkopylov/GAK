<openerp>
    <data>
		<!--Actions items!-->
		<record id="uis_papl_employee_action_window" model="ir.actions.act_window">
			<field name="name">ActivGIS employee</field>
			<field name="res_model">uis.papl.employee</field>
			<field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
			<!--NUPD Need add kanban view an xml for kanban from HR module!-->
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
			<!-- NUPD Add search filter!-->
            <!--<field name="search_view_id" ref="view_employee_filter"/><!-->
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new ActivGIS employee.
              </p><p>
                With just a quick glance on the ActivGIS employee screen, you
                can easily find all the information you need for each person;
                contact data, job position, department and set personal settings.
              </p>
            </field>
		</record>
		
		<record id="uis_main_settings_action_window" model="ir.actions.act_window">
			<field name="name">Main Settings</field>
			<field name="res_model">uis.settings</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create new Settings for user</p>
			</field>
		</record>
		<record id="uis_global_settings_action_window" model="ir.actions.act_window">
			<field name="name">Main Settings</field>
			<field name="res_model">uis.global.settings</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create new global settings</p>
			</field>
		</record>
		<record id="uis_icon_settings_action_window" model="ir.actions.act_window">
			<field name="name">Pilar icon settings</field>
			<field name="res_model">uis.icon.settings.pillar</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create new icon</p>
			</field>
		</record>
		<record id="uis_pillar_type_settings_action_window" model="ir.actions.act_window">
			<field name="name">Pilar type settings</field>
			<field name="res_model">uis.papl.pillar.type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create new pillar type</p>
			</field>
		</record>
		
		<record id="uis_papl_view_settings_apl_action_window" model="ir.actions.act_window">
			<field name="name">APL display settings</field>
			<field name="res_model">uis.papl.view.settings.apl</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create new apl display view</p>
			</field>
		</record>

		<record id="uis_papl_users_list_action_window" model="ir.actions.act_window">
			<field name="name">Users List</field>
			<field name="res_model">res.users</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create new apl display view</p>
			</field>
		</record>

		<record model="ir.ui.view" id="uis_papl_users_list_view_form">
    			<field name="name">User Settings</field>
    			<field name="model">res.users</field>
    			<field name="arch" type="xml">
				<form string="User Settings">
    					<field name="id"/>
    					<field name="name"/>
					<field name="login"/>
					<field name="papl_dept_ids" widget="many2many_tags"/>
				</form>
   			</field>
		</record>

		<record model="ir.actions.act_window.view" id="uis_papl_users_list_action_window_form">
    			<field name="view_mode">form</field>
    			<field name="view_id" ref="uis_papl_users_list_view_form"/>
   			<field name="act_window_id" ref="uis_papl_users_list_action_window" />
			<field eval="1" name="sequence"/>
		</record>

		<record model="ir.ui.view" id="uis_papl_users_list_view_tree">
    			<field name="name">Users List</field>
    			<field name="model">res.users</field>
    			<field name="arch" type="xml">
				<tree string="Users List">
    					<field name="id"/>
    					<field name="name"/>
					<field name="login"/>
					<field name="papl_dept_ids" widget="many2many_tags"/>
				</tree>
   			</field>
		</record>

		<record model="ir.actions.act_window.view" id="uis_papl_users_list_action_window_tree">
    			<field name="view_mode">tree</field>
    			<field name="view_id" ref="uis_papl_users_list_view_tree"/>
   			<field name="act_window_id" ref="uis_papl_users_list_action_window" />
			<field eval="1" name="sequence"/>
		</record>

		


		<!-- Menu items!-->
        <menuitem name="aGIS Settings" id="uis_settings_menu_root"/>
		<menuitem name="Settings" id="uis_main_settings_menu" parent="uis_settings_menu_root" action="uis_main_settings_action_window"/>
		<menuitem name="Global Settings" id="uis_global_settings_menu" parent="uis_settings_menu_root" action="uis_global_settings_action_window"/>
		<menuitem name="Pillar Icons" id="uis_pillar_icon_settings_menu" parent="uis_settings_menu_root" action="uis_icon_settings_action_window"/>
		<menuitem name="Employees" id="uis_papl_employee_menu" parent="uis_settings_menu_root" action="uis_papl_employee_action_window"/>
		<menuitem name="Pillar Types" id="uis_pillar_type_settings_menu" parent="uis_settings_menu_root" action="uis_pillar_type_settings_action_window"/>
		<menuitem name="APL display settings" id="uis_papl_view_settings_apl_menu" parent="uis_settings_menu_root" action="uis_papl_view_settings_apl_action_window"/>
		<menuitem name="Users List" id="uis_papl_users_list_meny" parent="uis_settings_menu_root" action="uis_papl_users_list_action_window"/>
		<!-- views !-->
		<record model="ir.ui.view" id="uis_global_settings_list">
			<field name="name">Global settings list</field>
			<field name="model">uis.global.settings</field>
			<field name="arch" type="xml">
				<tree string="List of global settings" editable="top" create="false" edit="false">
					<field name="id"/>
					<field name="name"/>
					<field name="desc"/>
					<field name="var"/>
					<field name="char_value"/>
					<field name="enabled"/>
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="uis_line_view_list">
			<field name="name">Line display settings list</field>
			<field name="model">uis.papl.view.settings.apl</field>
			<field name="arch" type="xml">
				<tree string="Line display settings list" editable="top" create="true" edit="false" colors="red:enabled!=True">
					<field name="id"/>
					<field name="line_code"/>
					<field name="voltage"/>
					<field name="apl_type"/>
					<field name="stroke_width"/>
					<field name="stroke_color"/>
					<field name="symbol_path"/>
					<field name="symbol_repeat"/>
					<field name="enabled"/>
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="uis_pillar_icon_list">
			<field name="name">Pillar icon list</field>
			<field name="model">uis.icon.settings.pillar</field>
			<field name="arch" type="xml">
				<tree string="List of Pillar Icons" editable="top" create="false" edit="false">
					<field name="id"/>
					<field name="pillar_icon_code"/>
					<field name="pillar_type_id"/>
					<field name="pillar_cut_id"/>
					<field name="pillar_icon_path"/>
					<field name="stroke_color" widget="color"/>
					<field name="fill_color" widget="color"/>
				</tree>
			</field>
		</record>
		<record id="uis_papl_icon_list_form" model="ir.ui.view">
		<field name="name">Pillar Icon list</field>
		<field name="model">uis.icon.settings.pillar</field>
		<field name="arch" type="xml">
			<form string="Pillar icon form">
			<sheet string="Details">
				<h1>
					<field name="pillar_icon_code"/>
				</h1>
				<field name="def_icon"/><label for="def_icon" string="default icon"/>
				<group>
					<group>
						<field name="pillar_type_id"/>
						<field name="pillar_cut_id"/>
					</group>
					<group>
						<field name="pillar_icon_path"/>
						<field name="stroke_color"/>
						<field name="stroke_width"/>
						<field name="fill_path"/>
						<field name="fill_color" attrs="{'invisible':[('fill_path', '=', False)]}"/>
						<field name="anchor"/>
						<field name="add_zoom"/>
					</group>
				</group>
			</sheet>
			</form>
		</field>
		</record>
    </data>
</openerp>