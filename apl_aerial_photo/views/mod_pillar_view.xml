<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
       <record id="view_mod_papl_pillar_form_aerophoto" model="ir.ui.view">
            <field name="name">uis.papl.pillar.inherit</field>
            <field name="model">uis.papl.pillar</field>
            <field name="inherit_id" ref="passportvl.uis_papl_pillar_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
					<div class="oe_right " style="width: 150px;" name="pillar_image">
						<field name="photo" widget="image"/>
					</div>
					
				</xpath>
            </field>
        </record> 
    </data>
</openerp>